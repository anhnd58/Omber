<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="2.5">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_omber"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="0.1">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="@drawable/customborder"
        android:layout_weight="0.7">
        <EditText
            android:id="@+id/et_name_profile"
            android:layout_width="300dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:hint="Tên"
            android:background="#00000000"
            android:inputType="text"
            android:textSize="7pt"
            android:textColorHint="@android:color/darker_gray"
        />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="@drawable/customborder"
        android:layout_weight="0.7">
        <EditText
            android:id="@+id/et_phone_profile"
            android:layout_width="300dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại"
            android:background="#00000000"
            android:inputType="text"
            android:textSize="7pt"
            android:textColorHint="@android:color/darker_gray"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="@drawable/customborder"
        android:layout_weight="0.7">
        <EditText
            android:id="@+id/et_address_profile"
            android:layout_width="300dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:hint="Địa chỉ"
            android:background="#00000000"
            android:inputType="text"
            android:textSize="7pt"
            android:textColorHint="@android:color/darker_gray"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:background="@drawable/customborder"
        android:layout_weight="0.7">
        <EditText
            android:id="@+id/et_mail"
            android:layout_width="300dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:background="#00000000"
            android:inputType="text"
            android:textSize="7pt"
            android:textColorHint="@android:color/darker_gray"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1.1">
        <Button
            android:id="@+id/bt_save_profile"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="55dp"
            android:text="Lưu"
            android:textSize="7pt"
            android:textColor="@color/white"
            android:background="@drawable/customborder"
            android:backgroundTint="?attr/colorPrimary"/>
        <Button
            android:id="@+id/bt_cancel_profile"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/bt_save_profile"
            android:text="@string/cancel"
            android:textSize="7pt"
            android:textColor="@color/white"
            android:background="@drawable/customborder"
            android:backgroundTint="?attr/colorPrimary"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="0.5">
    </RelativeLayout>
</LinearLayout>