<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin đặt xe"
            android:textSize="10pt"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.4">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:background="@drawable/customborder"
        android:layout_weight="1.2">
        <EditText
            android:id="@+id/edit_begin"
            android:layout_width="200dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:hint="Điểm đi"
            android:background="#00000000"
            android:inputType="text"
            android:textSize="7pt"
            android:textColorHint="@color/gray"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:background="@drawable/customborder"
        android:layout_weight="1.2">
        <EditText
            android:id="@+id/edit_destination"
            android:layout_width="200dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:hint="Điểm đến"
            android:background="#00000000"
            android:inputType="text"
            android:textSize="7pt"
            android:textColorHint="@color/gray"
            />
    </RelativeLayout>

    <!--<RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2">
    </RelativeLayout>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:background="@drawable/customborder"
        android:layout_weight="1.2">
        <EditText
            android:id="@+id/edit_price"
            android:layout_width="200dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:hint="Gia tiền(vnd)"
            android:background="#00000000"
            android:inputType="text"
            android:textSize="7pt"
            android:textColorHint="@color/gray"
            />
    </RelativeLayout>
    <!--<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1">

    </RelativeLayout>-->
    <RadioGroup
        android:id="@+id/radiogroup_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="60dp">
        <RadioButton
            android:id="@+id/radio_human"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đi xe"
            android:textSize="7pt"
            android:checked="true" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:layout_weight="1">
        </RelativeLayout>
        <RadioButton
            android:id="@+id/radio_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7pt"
            android:text="Gửi hàng" />

    </RadioGroup>
    <RelativeLayout
        android:layout_width="362dp"
        android:layout_height="37dp"
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        android:layout_weight="0.33">
        <Button
            android:id="@+id/button_OK_info"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Đồng ý"
            android:textColor="@color/white"
            android:textSize="7pt"
            android:background="@drawable/customborder"
            android:backgroundTint="?attr/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp" />

        <Button
            android:id="@+id/button_cancel_info"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="7pt"
            android:background="@drawable/customborder"
            android:backgroundTint="?attr/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button_OK_info" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="2">
    </RelativeLayout>
