<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app1.ducanh.ducanhvn.omber">
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />


    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.location" android:required="true" />
    <uses-feature android:name="android.hardware.location.gps" android:required="false" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_omber"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBtCJ2gK4nYuYdMqrcBbQwiIW5cU1vwOd0" />

        <activity
            android:name="SplashScreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".MapCustomer"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".MapRider"
            android:parentActivityName=".MainActivity"
            android:label="Bản đồ">
        </activity>
        <activity
            android:name=".SignIn"
            android:parentActivityName=".MainActivity"
            android:label="Đăng nhập">
        </activity>
        <activity
            android:name=".SignUp"
            android:parentActivityName=".MainActivity"
            android:label="Đăng ký">
        </activity>
        <activity
            android:name=".ManageProfile"
            android:parentActivityName=".MapCustomer"
            android:label="Cập nhật thông tin">
        </activity>
        <activity
            android:name=".SettingActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/action_settings">
        </activity>
        <activity
            android:name=".Info"
            android:parentActivityName=".MainActivity"
            android:label="Thông tin">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
